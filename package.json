{
  "name": "x4-mono",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "clean": "rm -rf node_modules .turbo && turbo clean",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:seed": "turbo db:seed",
    "db:studio": "turbo db:studio",
    "storybook": "turbo storybook:dev --filter=@x4/storybook",
    "storybook:build": "turbo storybook:build --filter=@x4/storybook",
    "setup:ai-docs": "bun scripts/download-ai-docs.ts"
  },
  "devDependencies": {
    "@playwright/test": "1.58.2",
    "@types/react": "19.2.13",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "bun-types": "latest",
    "eslint": "^8.57.0",
    "eslint-plugin-boundaries": "^4.0.0",
    "prettier": "^3.0.0",
    "turbo": "^2.0.0",
    "typescript": "~5.6.0"
  },
  "packageManager": "bun@1.3.8",
  "dependencies": {
    "@ai-sdk/anthropic": "3.0.39",
    "@ai-sdk/openai": "3.0.26",
    "@upstash/ratelimit": "2.0.8",
    "@upstash/redis": "1.36.2",
    "ai": "6.0.78",
    "pino": "10.3.1",
    "pino-pretty": "13.1.3",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  }
}
