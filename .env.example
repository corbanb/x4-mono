# Database — Neon Postgres connection string
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Authentication — secret for token signing (min 32 chars)
JWT_SECRET=your-jwt-secret-here-min-32-characters-long
BETTER_AUTH_SECRET=change-me-to-a-random-string-at-least-32-chars
BETTER_AUTH_URL=http://localhost:3002

# AI — Claude API key
ANTHROPIC_API_KEY=sk-your-anthropic-api-key

