    "@x4/database": "workspace:*",
    "@x4/shared": "workspace:*",
    "hono": "^4.7.0",
    "trpc-to-openapi": "2.4.0",
    "zod": "^3.23.0",
    "zod-openapi": "4.2.4"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "lint": "eslint src/",
