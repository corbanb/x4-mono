{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../web/src/*"]
    }
  },
  "include": [
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "../web/src/**/*.stories.ts",
    "../web/src/**/*.stories.tsx",
    "../../packages/shared/ui/**/*.stories.ts",
    "../../packages/shared/ui/**/*.stories.tsx"
  ],
  "exclude": ["node_modules", "storybook-static"]
}
