{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "boundaries"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:boundaries/recommended"
  ],
  "settings": {
    "boundaries/elements": [
      {
        "type": "shared-types",
        "pattern": "packages/shared/src/types/*"
      },
      {
        "type": "shared-utils",
        "pattern": "packages/shared/src/utils/*"
      },
      {
        "type": "shared",
        "pattern": "packages/shared/src/*",
        "capture": ["file"]
      },
      {
        "type": "database",
        "pattern": "packages/database/src/*"
      },
      {
        "type": "auth",
        "pattern": "packages/auth/src/*"
      },
      {
        "type": "ai-integrations",
        "pattern": "packages/ai-integrations/src/*"
      },
      {
        "type": "apps",
        "pattern": "apps/*/src/*"
      }
    ],
    "import/resolver": {
      "typescript": true
    }
  },
  "rules": {
    "boundaries/element-types": [
      2,
      {
        "default": "disallow",
        "rules": [
          {
            "from": "shared-types",
            "allow": []
          },
          {
            "from": "shared-utils",
            "allow": ["shared-types"]
          },
          {
            "from": "shared",
            "allow": ["shared-types", "shared-utils", "shared"]
          },
          {
            "from": "database",
            "allow": ["shared-types"]
          },
          {
            "from": "auth",
            "allow": ["shared-types", "database"]
          },
          {
            "from": "ai-integrations",
            "allow": ["shared-types"]
          },
          {
            "from": "apps",
            "allow": [
              "shared-types",
              "shared-utils",
              "shared",
              "database",
              "auth",
              "ai-integrations"
            ]
          }
        ]
      }
    ],
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "@typescript-eslint/no-explicit-any": "error",
    "no-console": "warn"
  },
  "ignorePatterns": ["node_modules", "dist", ".next", ".turbo", "*.config.js", "*.config.mjs"]
}
